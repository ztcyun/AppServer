[Unit]
Description=AppServer-api_system

[Service]
PIDFile=/run/appserver/appserver-api_system.pid
Type=simple
user=root
WorkingDirectory=/var/www/services/apisystem/
ExecStart=/usr/bin/dotnet /var/www/services/apisystem/ASC.ApiSystem.dll --urls=http://0.0.0.0:5010 \
--pathToConf=/app/onlyoffice/config/ --$STORAGE_ROOT=/app/onlyoffice/data/ --log:dir=/var/log/onlyoffice --log:name=apisystem --ENVIRONMENT=test
TimeoutSec=300
Restart=always

[Install]
WantedBy=multi-user.target